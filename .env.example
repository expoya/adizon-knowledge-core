# =============================================================================
# Adizon Knowledge Core - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values

# -----------------------------------------------------------------------------
# PostgreSQL + pgvector
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=knowledge_core
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5433/knowledge_core

# -----------------------------------------------------------------------------
# Neo4j Graph Database
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# -----------------------------------------------------------------------------
# MinIO S3-Compatible Storage
# -----------------------------------------------------------------------------
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=knowledge-documents
MINIO_SECURE=false

# -----------------------------------------------------------------------------
# AI API (Trooper - OpenAI-compatible endpoint)
# Used for both embeddings and LLM calls
# -----------------------------------------------------------------------------
EMBEDDING_API_URL=https://your-trooper-server.com/v1
EMBEDDING_API_KEY=your-api-key
EMBEDDING_MODEL=jina/jina-embeddings-v2-base-de

# LLM for graph extraction
LLM_MODEL_NAME=adizon-ministral

# -----------------------------------------------------------------------------
# OpenAI API (optional, legacy)
# -----------------------------------------------------------------------------
OPENAI_API_KEY=sk-your-openai-api-key-here

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
