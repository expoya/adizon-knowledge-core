# =============================================================================
# Adizon Trooper Worker - Environment Variables
# =============================================================================

# PostgreSQL + pgvector
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=knowledge_core
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_neo4j_password

# MinIO / S3
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=knowledge-documents
MINIO_SECURE=false

# AI API (Trooper LLM Server)
EMBEDDING_API_URL=http://trooper:8080/v1
EMBEDDING_API_KEY=your_api_key
EMBEDDING_MODEL=jina/jina-embeddings-v2-base-de
LLM_MODEL_NAME=adizon-ministral

# Ontology Configuration
ONTOLOGY_PATH=config/ontology_voltage.yaml

# Backend Callback URL (for status updates after processing)
BACKEND_URL=http://adizon-backend:8000
